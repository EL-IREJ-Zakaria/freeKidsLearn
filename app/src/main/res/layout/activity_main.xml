<?xml version="1.0" encoding="utf-8"?><!-- ========================================================================
     ACTIVITY_MAIN.XML - Accueil Candy Fun pour enfants
     ========================================================================
     Design magique avec:
     - Fond dégradé pastel
     - Grandes cartes colorées avec dégradés
     - Emojis et étoiles décoratives
     - Animations visuelles
     ======================================================================== -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_main"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/spacing_large">

        <!-- ════════════════════════════════════════════════════════════════
             SECTION 1: En-tête magique avec mascotte
             ════════════════════════════════════════════════════════════════ -->

        <!-- Étoiles décoratives -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="24sp"
                android:textColor="@color/rainbow_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="16sp"
                android:textColor="@color/rainbow_pink"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="20sp"
                android:textColor="@color/rainbow_cyan"
                android:layout_marginStart="24dp" />

        </LinearLayout>

        <!-- Mascotte - Hibou savant -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mascot_emoji"
            android:textSize="80sp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_small" />

        <!-- Titre principal avec style fun -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <!-- Sous-titre avec emojis -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_xlarge">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_language"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- ════════════════════════════════════════════════════════════════
             SECTION 2: Carte Alphabet Arabe - Violet magique
             ════════════════════════════════════════════════════════════════ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardArabic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_arabic"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <!-- Ligne supérieure: emoji et badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Grand emoji -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/emoji_arabic"
                        android:textSize="56sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Badge étoile -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button_accent"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/letters_count_arabic"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Lettres arabes décoratives -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arabic_letters_preview"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/spacing_medium" />

                <!-- Titre de l'alphabet -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arabic_alphabet"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/overlay_light"
                    android:layout_marginTop="@dimen/spacing_tiny" />

                <!-- Bouton jouer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play_now"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_arrow_back"
                        android:drawableTint="@color/white"
                        android:drawablePadding="8dp"
                        android:scaleX="-1" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ════════════════════════════════════════════════════════════════
             SECTION 3: Carte Alphabet Français - Bleu océan
             ════════════════════════════════════════════════════════════════ -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFrench"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_french"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <!-- Ligne supérieure: emoji et badge -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Grand emoji -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/emoji_french"
                        android:textSize="56sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!-- Badge étoile -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_button_accent"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/letters_count_french"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Lettres françaises décoratives -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/french_letters_preview"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/spacing_medium" />

                <!-- Titre de l'alphabet -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/french_alphabet"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/overlay_light"
                    android:layout_marginTop="@dimen/spacing_tiny" />

                <!-- Bouton jouer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/play_now"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:drawableEnd="@drawable/ic_arrow_back"
                        android:drawableTint="@color/white"
                        android:drawablePadding="8dp"
                        android:scaleX="-1" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ════════════════════════════════════════════════════════════════
             SECTION 4: Footer avec étoiles
             ════════════════════════════════════════════════════════════════ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_emoji"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
