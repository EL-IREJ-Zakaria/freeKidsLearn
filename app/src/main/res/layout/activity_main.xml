<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_light"
    android:padding="@dimen/spacing_large"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textSize="@dimen/text_size_xxlarge"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="@dimen/spacing_xlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_language"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="@dimen/spacing_large" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardArabic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/button_arabic"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ع ب ج"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/spacing_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arabic_alphabet"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFrench"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_large"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/button_french"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/spacing_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/spacing_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/french_alphabet"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>