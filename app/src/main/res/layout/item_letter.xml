<?xml version="1.0" encoding="utf-8"?><!-- ========================================================================
     ITEM_LETTER.XML - Carte de lettre Candy Fun (Simple)
     ========================================================================
     Design épuré: juste la lettre dans un beau cercle coloré
     ======================================================================== -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="0dp"
    app:rippleColor="@color/ripple_colored"
    android:clickable="true"
    android:focusable="true">

    <!-- Contenu de la carte -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:minHeight="90dp">

        <!-- Cercle coloré avec la lettre -->
        <FrameLayout
            android:id="@+id/letterCircle"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center">

            <!-- Fond cercle coloré -->
            <View
                android:id="@+id/circleBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_letter_pink" />

            <!-- La lettre -->
            <TextView
                android:id="@+id/textLetter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium" />

        </FrameLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>
